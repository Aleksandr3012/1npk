
mixin modal() 
  
	div(id="modal-nav" class="  mfp-hide modal-win modal-form " )
		+b.nav-block
			.container
				.row
					.col
						+e.block
							+e.main-item: +e.main-link(href="#") Главная
							+e.main-item: +e.main-link(href="#") Продукция
							+e.main-item: +e.main-link(href="#") Доставка
							+e.main-item: +e.main-link(href="#") Компания
							+e.main-item: +e.main-link(href="#") Реализованные проекты
							+e.main-item: +e.main-link(href="#") Ответы на вопросы
							+e.main-item: +e.main-link(href="#") Отзывы клиентов
							+e.main-item: +e.main-link(href="#") Документы
							+e.main-item: +e.main-link(href="#") Контакты
					.col-auto.d-none.d-md-block
						// добавил обертку
						+e.block-wrap
							+e.block
								+e.item: +e.link(href="#") Щебень
								+e.item: +e.link(href="#") Отсев щебня
								+e.item: +e.link(href="#") Бутовый камень
								+e.item: +e.link(href="#") Узкие фракции
								+e.item: +e.link(href="#") Смеси щебня
								+e.item: +e.link(href="#") Песок
								+e.item: +e.link(href="#") Гравий
								+e.item: +e.link(href="#") ПГС ОПГС

							+e.block
								+e.item: +e.link(href="#") Доставка автотранспортом
								+e.item: +e.link(href="#") Доставка Ж/Д вагонами
								+e.item: +e.link(href="#") Доставка баржами по воде
				
				+e.btn.btn-lg.d-md-none(href="#") Калькулятор поставок
	// #modal-nav


	+form-wrap()(id="modal-call" class="  mfp-hide modal-win modal-form " )
		+e.block
			.text-center
				+e.title

				+e.text Заполните форму и&nbsp;персональный менеджер свяжется с&nbsp;Вами в&nbsp;течение 15&nbsp;минут
				+input('text','Ваше имя')
				+input('tel','Ваш телефон')(class='is-invalid')
				//- .d-none.d-sm-block
				+input('email','Ваш E-mail') 
				+ta('Ваш вопрос')
				+add-file(n)
				+e.btn(type="submit") Отправить
				+polite
	// /#modal-call
	
	+form-wrap()(id="modal-profile" class="  mfp-hide modal-win modal-form " )
		+e.block
			.text-center
				+e.title Анкета соискателя

				+e.text Заполните форму, прикрепите резюме и&nbsp;мы&nbsp;свяжемся с&nbsp;Вами в&nbsp;ближайшее время
				+input('text','Ваше имя')
				+input('tel','Ваш телефон')(class='is-invalid')
				.d-none.d-sm-block
					+input('email','Ваш E-mail') 
					+ta('Ваш вопрос')
					+add-file(n)
				+e.btn(type="submit") Отправить
				+polite
	// /#modal-profile
	
