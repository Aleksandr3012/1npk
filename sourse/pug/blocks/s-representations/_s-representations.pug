mixin s-representations()
	// start s-representations
	+b.s-representations.section#s-representations&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 Представительства
					br
					| Первой нерудной компании
		mixin group(t)
			+e.group
				+e.group-title.h6= t
				block
			// /+e.group
		mixin item()

			+e.item
				.container
				
					block
			// /+e.item
		mixin groups()
			.col-sm
				+group('Отдел продаж:')
					.h6: +e.link(href="tel:+7(960)088-88-44") +7 (960) 088-88-44
				+group('Отдел логистики:')
					.h6: +e.link(href="tel:+7(904)666-04-04") +7 (904) 666-04-04

			.col-sm
				+group('Руководитель филиала:')
					.h6: +e.link(href="tel:+7(917)926-27-77") +7 (917) 926-27-77
				+group('Эл. почта:')
					.h6: +e.link(href="mailto:info@pn-company.ru")  info@pn-company.ru 
		mixin btn-map()
			+e.btn.modal-map-btn(href="#") Посмотреть на карте
			div(  class=" mfp-hide modal-map " )  
				<script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A62371ef8cc05c13aab027adda7ed2f3db638d5c11f541f655e1f07d2d73664cd&amp;width=100%25&amp;height=400&amp;lang=ru_RU&amp;scroll=true"></script>
		+item()
			+e.item-head
				+e.item-title Набережные Челны
				+e.item-sub-title Головной офис компании
			.row
				.col-md-6
					+group('Контактное лицо:')
						.h6 ООО «Первая нерудная компания»
					+group('Адрес:')
						.h6 Россия, Республика Татарстан, г. Набережные Челны, ул.&nbsp;Орловская, 73А
					+e.group.d-none.d-md-block
						.row
							.col
								+btn-map()
							.col-sm-auto
								+b.doc-link(href="#" target="_blank")
										+e.before
											img.res-i.lazy(src="#" data-src="img/doc-i.png", alt="")
										div
											.h6
												span Карта партнера
											.text-gray2 2 мб
				.col-sm
					+group('Отдел продаж:')
						.h6 
							+e.link(href="tel:+7(960)088-88-44") +7 (960) 088-88-44 
					+group('Отдел логистики:')
						.h6 
							+e.link(href="tel:+7(904)666-04-04") +7 (904) 666-04-04
					
					+group('Отдел логистики:')
						.h6 
							+e.link(href="tel:+7(906)333-31-16") +7 (906) 333-31-16

				.col-sm
					+group('Руководитель филиала:')
						.h6 
							+e.link(href="tel:+7(800)100-73-75") +7 (800) 100-73-75
					
					+group('Руководитель филиала:')
						.h6: +e.link(href="tel:+7(917)926-27-77")  +7 (917) 926-27-77
					
					+group('Эл. почта:')
						.h6: +e.link(href="mailto:info@pn-company.ru")  info@pn-company.ru
			+e.group.d-md-none
				.row
					.col
						+btn-map()
					.col-sm-auto
						+b.doc-link(href="#" target="_blank")
								+e.before
									img.res-i.lazy(src="#" data-src="img/doc-i.png", alt="")
								div
									.h6
										span Карта партнера
									.text-gray2 2 мб

		+item()
			+e.item-head
				+e.item-title Нижнекамск
			
			.row
				.col-md-6
					+group('Контактное лицо:')
						.h6 ООО «Первая нерудная компания — Поволжье»
					+group('Адрес:') 
						.h6 Россия, Республика Татарстан, г. Алметьевск, ул.&nbsp;Индустриальная, 5
					+e.group.d-none.d-md-block: +btn-map() 
				+groups()
			+e.group.d-md-none: +btn-map()
				
		
		+item()
			+e.item-head
				+e.item-title Уфа
			
			.row
				.col-md-6
					+group('Контактное лицо:')
						.h6 ООО «Первая нерудная компания — Поволжье»
					+group('Адрес:')
						.h6 Россия, Республика Башкортостан, г. Уфа, ул.&nbsp;Октябрьской Революции, 27Б
					+e.group.d-none.d-md-block: +btn-map()

				+groups()
			+e.group.d-md-none: +btn-map()
		
		+item()
			+e.item-head
				+e.item-title Альметьевск
			
			.row
				.col-md-6
					+group('Контактное лицо:')
						.h6 ООО «Первая нерудная компания — Поволжье»
					+group('Адрес:')
						.h6 Россия, Республика Татарстан, г. Альметьевск, ул.&nbsp;Индустриальная, 5
					+e.group.d-none.d-md-block: +btn-map()

				+groups()
			+e.group.d-md-none: +btn-map()
		
		+item()
			+e.item-head
				+e.item-title Казань
			
			.row
				.col-md-6
					+group('Контактное лицо:')
						.h6 ООО «Первая нерудная компания — Поволжье»
					+group('Адрес:')
						.h6 Россия, Республика Татарстан, г. Казань, ул.&nbsp;Озерная, 16А
					+e.group.d-none.d-md-block: +btn-map()

				+groups()
			+e.group.d-md-none: +btn-map()
		
		+item()
			+e.item-head
				+e.item-title Нефтекамск
			.row
				.col-md-6
					+group('Контактное лицо:')
						.h6 ООО «Первая нерудная компания — Поволжье»
					+group('Адрес:')
						.h6 Россия, Республика Татарстан, г. Нефтекамск, ул.&nbsp;Промышленная, 15Б
					+e.group: +btn-map()

				+groups()
			+e.group.d-md-none: +btn-map()
			
	// end s-representations